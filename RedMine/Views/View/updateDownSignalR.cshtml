            //};
            //function getVersionCombo() {
            //    var jsonParameters = {};
            //    jsonParameters["id"] = $("#id").val();
            //    jsonParameters["pw"] = $("#pw").val();
            //    chat.server.getVersionCombo(jsonParameters);
            //}
            
            $("#down").hide();
            $("#versionCommit").hide();
            $("#closeUpdate").hide();

            $("#versionUp").click(function () {
                var jsonParameters = {};
                jsonParameters["id"] = $("#id").val();
                jsonParameters["pw"] = $("#pw").val();
                chat.server.getVersionCombo(jsonParameters);
            });
            chat.client.drawCombo = function (parameter) {
                getVersionCombo(parameter);
            };
            $("#versionCommit").click(function () {
                versionCommit();
            });

            $("#closeUpdate").click(function () {
                closeUpdate();
            });
        });
    </script>
}